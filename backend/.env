# General App Settings
APP_ENV=developement
APP_PORT=5000

# Pi Network API Credentials
PI_API_KEY=your_pi_api_key_here
PI_API_SECRET=your_pi_api_secret_here
PI_APP_ID=your_pi_app_id_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pi_network_db

# Security Keys
SECRET_KEY=your_super_secret_key_here
JWT_SECRET=your_jwt_secret_key_here

# Pi Network Endpoints (example)
PI_API_BASE_URL=https://api.minepi.com

# Logging
LOG_LEVEL=info

# Optional: CORS and Other Settings
CORS_ORIGINS=*

# Optional: Redis for Caching
# REDIS_URL=redis://localhost:6379/0

# Optional: Email/SMTP
# SMTP_SERVER=smtp.yourdomain.com
# SMTP_PORT=465
# SMTP_USER=your_email_user
# SMTP_PASSWORD=your_email_password
